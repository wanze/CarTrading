<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Offer</th>
      <th>Placed by</th>
      <th>Timestamp</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.user_id %></td>
        <td><%= bid.offer_id %></td>
        <td><%= bid.placed_by %></td>
        <td><%= bid.timestamp %></td>
        <td><%= bid.price %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_bid_path %>
