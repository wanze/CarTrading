<%= form_for(@offer) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :car_id %><br>
    <%= f.collection_select(:car_id, @cars , :id, :title, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end %>
  </div>

  <% if not @offer.is_immutable %>
      <div class="field">
        <%= f.label :price %><br>
        <%= f.text_field :price %>
      </div>
      <div class="field">
        <%= f.label :minimum_step %><br>
        <%= f.number_field :minimum_step %>
      </div>
  <% end %>

  <div class="field">
    <%= f.label :contact_details %><br>
    <%= f.text_area :contact_details %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
