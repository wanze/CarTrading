<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Car</th>
      <th>Car title</th>
      <th>Car brand</th>
      <th>Car type</th>
      <th>Car owner</th>
      <th>Start</th>
      <th>End</th>
      <th>Price</th>
      <th>Minimum step</th>
      <th>Contact details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.car_id %></td>
        <td><%= offer.car.title %></td>
        <td><%= offer.car.brand.title %></td>
        <td><%= offer.car.type.title %></td>
        <td><%= offer.car.user.email %></td>
        <td><%= offer.start %></td>
        <td><%= offer.end %></td>
        <td><%= offer.price %></td>
        <td><%= offer.minimum_step %></td>
        <td><%= offer.contact_details %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
